<h1 class="header">Register Form</h1>
<form action="/register" method="POST">
    <div class="mb-3">
        <label for="name" class="form-label" >Name</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="name:John doe" require>
    </div>
    <div class="mb-3"></div>
        <label for="email" class="form-label" >Email address</label>
        <input type="text" class="form-control" id="email" name="email" placeholder="johndoe@email.com" require>
    </div>
    <div class="mb-3"></div>
        <label for="password" class="form-label" >Password</label>
        <input type="password" class="form-control" id="password" name="password" placeholder="********" require>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
